ARG UCS_BASE_IMAGE_TAG=latest
ARG UCS_VERSION=520

FROM gitregistry.knut.univention.de/univention/customers/dataport/upx/container-ucs-base/ucs-base-test-${UCS_VERSION}-dev:${UCS_BASE_IMAGE_TAG}

